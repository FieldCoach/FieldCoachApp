<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/td_team_name"
        android:inputType="textMultiLine"
        android:textSize="@dimen/dialog_text_size"
        android:layout_marginLeft="@dimen/dialog_horizontal_margin"
        android:layout_marginRight="@dimen/dialog_horizontal_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/regular_margin"/>

    <TextView
        android:id="@+id/td_team_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/td_team_size"
        android:textSize="@dimen/dialog_text_size"
        android:layout_below="@id/et_team_name"
        android:layout_marginLeft="@dimen/dialog_horizontal_margin"
        android:layout_marginRight="@dimen/dialog_horizontal_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/regular_margin"/>

    <Spinner
        android:id="@+id/sp_team_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/td_team_size"
        android:layout_marginLeft="@dimen/dialog_horizontal_margin"
        android:layout_marginRight="@dimen/dialog_horizontal_margin"/>

</RelativeLayout>